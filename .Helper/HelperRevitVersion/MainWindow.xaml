<Window x:Class="HelperRevitVersion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Revit 文件版本" WindowStartupLocation="CenterScreen"
        Height="200" Width="550" MinHeight="200" MinWidth="550" MaxHeight="200" MaxWidth="550">
    
    <Grid>
        <Label Content="文件位置：" Margin="10,18,468,0" VerticalContentAlignment="Center" Height="30" 
               VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="FilePath" Margin="80,18,10,0" TextWrapping="Wrap" Text=" " 
                 VerticalContentAlignment="Center" Height="30" VerticalAlignment="Top" IsReadOnly="True"/>

        <Label Content="文件版本：" Margin="10,0,461,66.4" VerticalContentAlignment="Center" 
               Height="30" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <TextBox x:Name="ShowVersion" Margin="80,0,10,66.4" TextWrapping="Wrap" Text=" " 
                 VerticalContentAlignment="Center" Height="30" VerticalAlignment="Bottom" IsReadOnly="True"/>

        <Button x:Name="Pick" Content="选择文件" Margin="10,0,10,20.4" Click="Pick_Click" Height="24" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
