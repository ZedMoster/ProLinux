<Window x:Class="hybh.WPFAlignWallToTop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hybh"
             mc:Ignorable="d" Height="150" Width="270" Title="梁高度" MaxWidth="270" MaxHeight="150" MinWidth="270" MinHeight="150" Closed="Window_Closed" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox Header="参数名称" Height="60" Margin="10,10,12,0" VerticalAlignment="Top" >
            <Grid Height="36" Margin="0,-1,-2,0" VerticalAlignment="Top">
                <Label Content="输入梁高度参数的名称：" HorizontalAlignment="Left" VerticalAlignment="Top" Width="141" Margin="0,5,0,0"/>
                <TextBox x:Name="H_name" Height="23" Margin="141,6,5,0" TextWrapping="Wrap" Text="h" VerticalAlignment="Top" VerticalContentAlignment="Center" ToolTip="需要指定梁族高度的参数名称"/>

            </Grid>
        </GroupBox>
        <Button Name="ok" Content="确定" HorizontalAlignment="Left" Margin="12,83,0,0" VerticalAlignment="Top" Width="240" Click="ok_Click" IsDefault="True" Height="22"/>

    </Grid>
</Window>
