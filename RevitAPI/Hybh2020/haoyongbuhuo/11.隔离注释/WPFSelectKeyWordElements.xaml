<Window x:Class="hybh.WPFSelectKeyWordElements"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hybh"
             mc:Ignorable="d" Height="282" Width="374" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid>
        <ComboBox Name="KeyWord" Margin="9,50,11,0"
                  DisplayMemberPath="key" SelectedValuePath="value" Height="30" VerticalAlignment="Top"/>
        <Label Content="选择参数值：默认注释" Margin="10,10,10,0" VerticalAlignment="Top" FontSize="14"/>
        <Button Content="确定" Margin="10,0,10,10" Height="24" VerticalAlignment="Bottom" FontSize="14" Click="Button_Click"/>
    </Grid>
</Window>
